                            document.getElementById('reservationDate').textContent = new Date(reservation.date).toLocaleString();
                            document.getElementById('reservationStatus').textContent = reservation.status;
                            updateUI(true);
                            return true;
                        } else {
                            updateUI(false);
                            return false;
                        }
                    } else {
                        updateUI(false);
                        return false;
                    }
