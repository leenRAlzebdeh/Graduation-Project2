                    // Disable button and show processing
                    this.disabled = true;
                    statusDiv.textContent = 'Processing...';
                    statusDiv.className = 'status-message';

                    try {
                        // Prepare data
                        const data = {
                            studentId: studentId,
                            departmentName: '@ViewBag.DepartmentName',
                            location: '@ViewBag.Location',
                            wing: wing,
                            level: parseInt(level)
                        };

                        // Make AJAX request
