    <style>
        .profile-modern-wrapper {
            padding: 0;
            margin: 0;
            height: calc(100vh - 140px);
            display: flex;
            justify-content: center;
            align-items: center;
            background: #f9f9f9;
        }

        .profile-modern-card {
            display: flex;
            background: #fff;
            width: 100%;
            max-width: 1000px;
            border-radius: 16px;
            box-shadow: 0 4px 16px rgba(0, 0, 0, 0.08);
            overflow: hidden;
        }

        .avatar-section {
            background: #dbf0fa;
            padding: 30px;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            width: 300px;
        }

        .avatar-img {
            width: 140px;
            height: 140px;
            border-radius: 50%;
            object-fit: cover;
            margin-bottom: 20px;
            border: 4px solid #fff;
            box-shadow: 0 2px 6px rgba(0, 0, 0, 0.1);
        }

        .btn-change {
            background-color: #0072ff;
            color: white;
            border: none;
            padding: 10px 16px;
            font-size: 14px;
            border-radius: 8px;
            cursor: pointer;
            margin-top: 8px;
            transition: background-color 0.2s;
        }

            .btn-change:hover {
                background-color: #005ecb;
            }

        .info-section {
            flex: 1;
            padding: 40px;
        }

            .info-section h2 {
                margin-bottom: 5px;
                font-size: 24px;
                font-weight: 600;
            }

            .info-section .desc {
                color: #777;
                margin-bottom: 20px;
            }

        .form-columns {
            display: flex;
            gap: 40px;
        }

        .column {
            flex: 1;
            display: flex;
            flex-direction: column;
        }

            .column label {
                font-weight: 600;
                margin-bottom: 6px;
                margin-top: 12px;
            }

            .column input {
                padding: 10px;
                border: 1px solid #ddd;
                border-radius: 8px;
                background-color: #f9f9f9;
            }

                .column input:disabled {
                    background-color: #eee;
                    color: #555;
                }

        .form-footer {
            margin-top: 25px;
            display: flex;
            gap: 10px;
        }

        .btn-update, .btn-cancel {
            background-color: #0072ff;
            color: white;
            border: none;
            padding: 10px 20px;
            font-size: 16px;
            border-radius: 10px;
            cursor: pointer;
        }

        .btn-cancel {
            background-color: #e5e7eb;
            color: #111827;
        }

        .btn-update:hover {
            background-color: #005ecb;
        }

        .btn-cancel:hover {
            background-color: #d1d5db;
        }

    </style>

