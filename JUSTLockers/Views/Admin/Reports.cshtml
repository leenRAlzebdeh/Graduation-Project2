            @model IEnumerable<JUSTLockers.Classes.Report>
@using JUSTLockers.Classes

<head>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <title>Locker Issues</title>
    <style>
        .clickable-row {
            cursor: pointer;
        }

        .badge {
            font-size: 0.9em;
        }

        .resolution-panel {
            background-color: #f8f9fa;
            border-left: 4px solid #28a745;
            padding: 15px;
            margin-top: 20px;
            border-radius: 4px;
        }

        .resolution-header {
            color: #28a745;
            font-weight: bold;
            margin-bottom: 10px;
        }

        .toggle-solved-btn {
            margin-left: 10px;
        }
    </style>
</head>

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Locker Issues</h2>
        <div>
            <a href="@Url.Action("AdminDashboard", "Admin")" class="btn btn-primary">
                <i class="fas fa-arrow-left"></i> Back to Home
            </a>
            <button id="toggleSolved" class="btn btn-outline-secondary toggle-solved-btn">
                <i class="fas fa-eye"></i> Show Solved
            </button>
        </div>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success">@TempData["SuccessMessage"]</div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
    }

    <table class="table table-hover table-striped">
        <thead class="thead-dark">
            <tr>
                <th>Locker Number</th>
                <th>Problem Description</th>
                <th>Status</th>
                <th>Reported On</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var report in Model)
            {
                <tr class="clickable-row @(report.Status == ReportStatus.RESOLVED ? "solved-row" : "unsolved-row")"
                    data-bs-toggle="modal" data-bs-target="#detailsModal-@report.ReportId">
                    <td>@report.Locker.LockerId</td>
                    <td>@report.Subject</td>
                    <td>
                        <span class="badge @GetStatusBadgeClass(report.Status)">
                            @report.Status
                        </span>
                    </td>
                    <td>@report.ReportDate.ToString("MM/dd/yyyy hh:mm tt")</td>
                    <td>
                        @if (report.Status != ReportStatus.RESOLVED)
                        {
                            <button class="btn btn-sm btn-success"
                                    data-bs-toggle="modal"
                                    data-bs-target="#resolveModal-@report.ReportId"
                                    onclick="event.stopPropagation()">
                                <i class="fas fa-check"></i> Solve
                            </button>
                        }
                        <button class="btn btn-sm btn-danger"
                                data-bs-toggle="modal"
                                data-bs-target="#deleteModal-@report.ReportId"
                                onclick="event.stopPropagation()">
                            <i class="fas fa-trash"></i> Delete
                        </button>
                    </td>
                </tr>

                <!-- Report Details Modal -->
                <div class="modal fade" id="detailsModal-@report.ReportId" tabindex="-1" aria-hidden="true">
                    <div class="modal-dialog modal-lg">
                        <div class="modal-content">
                            <div class="modal-header bg-primary text-white">
                                <h5 class="modal-title">Report Details - Locker @report.Locker.LockerId</h5>
                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                            </div>
                            <div class="modal-body">
                                <div class="row mb-3">
                                    <div class="col-md-6">
                                        <h6>Locker Information</h6>
                                        <p><strong>Locker ID:</strong> @report.Locker.LockerId</p>
                                        <p><strong>Department:</strong> @report.Locker.Department</p>
                                        <p><strong>Status:</strong> <span class="badge @GetStatusBadgeClass(report.Status)">@report.Status</span></p>
                                    </div>
                                    <div class="col-md-6">
                                        <h6>Reporter Information</h6>
                                        <p><strong>Name:</strong> @report.Reporter.Name</p>
                                        <p><strong>Email:</strong> @report.Reporter.Email</p>
                                        <p><strong>Department:</strong> @report.Reporter.Department</p>
                                    </div>
                                </div>

                                <div class="mb-3">
                                    <h6>Problem Details</h6>
                                    <p><strong>Subject:</strong> @report.Subject</p>
                                    <p><strong>Description:</strong></p>
                                    <div class="border p-3 bg-light rounded">@Html.Raw(report.Statement.Replace("\n", "<br/>"))</div>
                                </div>

                                @if (report.Status == ReportStatus.RESOLVED)
                                {
                                    <div class="resolution-panel">
                                        <div class="resolution-header">
                                            <i class="fas fa-check-circle"></i> Resolution Details
                                        </div>
                                        <p><strong>Resolved on:</strong> @report.ResolvedDate?.ToString("MM/dd/yyyy hh:mm tt")</p>
                                        <div class="border-top pt-2 mt-2">
                                            @if (!string.IsNullOrEmpty(report.ResolutionDetails))
                                            {
                                                @Html.Raw(report.ResolutionDetails.Replace("\n", "<br/>"))
                                            }
                                            else
                                            {
                                                <div class="alert alert-info">
                                                    <i class="fas fa-info-circle"></i> This report was marked as resolved without additional details.
                                                </div>
                                            }
                                        </div>
                                    </div>
                                }
                                }
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Resolve Report Modal -->
                <div class="modal fade" id="resolveModal-@report.ReportId" tabindex="-1" aria-hidden="true">
                    <div class="modal-dialog modal-lg">
                        <div class="modal-content">
                            <form asp-action="ResolveReport" method="post" id="resolveForm-@report.ReportId">
                                @Html.AntiForgeryToken()
                                <input type="hidden" name="reportId" value="@report.ReportId" />

                                <div class="modal-header bg-success text-white">
                                    <h5 class="modal-title">Resolve Report #@report.ReportId</h5>
                                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                </div>

                                <div class="modal-body">
                                    <div class="mb-3">
                                        <label for="resolutionDetails-@report.ReportId" class="form-label">Resolution Details *</label>
                                        <textarea class="form-control" id="resolutionDetails-@report.ReportId"
                                                  name="resolutionDetails" rows="5" 
                                                  placeholder="Describe exactly how the issue was resolved..."></textarea>
                                        <div class="invalid-feedback">Please provide detailed resolution information.</div>
                                    </div>
                                </div>

                                <div class="modal-footer">
                                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                    <button type="submit" class="btn btn-success">
                                        <i class="fas fa-check-circle"></i> Mark as Resolved
                                    </button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>

                <!-- Delete Report Modal -->
                <div class="modal fade" id="deleteModal-@report.ReportId" tabindex="-1" aria-hidden="true">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <form asp-action="DeleteReport" method="post">
                                <input type="hidden" name="reportId" value="@report.ReportId" />
                                <div class="modal-header bg-danger text-white">
                                    <h5 class="modal-title">Delete Report</h5>
                                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                </div>
                                <div class="modal-body">
                                    <p>Are you sure you want to delete this report?</p>
                                    <p><strong>Locker:</strong> @report.Locker.LockerId</p>
                                    <p><strong>Subject:</strong> @report.Subject</p>
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                    <button type="submit" class="btn btn-danger">Delete Report</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            }
        </tbody>
    </table>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
<script>
    document.addEventListener('DOMContentLoaded', function() {
        // Hide solved reports by default
        document.querySelectorAll('.solved-row').forEach(row => {
            row.style.display = 'none';
        });

        // Toggle solved reports visibility
        const toggleButton = document.getElementById('toggleSolved');
        let showSolved = false;

        toggleButton.addEventListener('click', function() {
            showSolved = !showSolved;

            document.querySelectorAll('.solved-row').forEach(row => {
                row.style.display = showSolved ? 'table-row' : 'none';
            });

            toggleButton.innerHTML = showSolved
                ? '<i class="fas fa-eye-slash"></i> Hide Solved'
                : '<i class="fas fa-eye"></i> Show Solved';

            toggleButton.classList.toggle('btn-outline-secondary', !showSolved);
            toggleButton.classList.toggle('btn-outline-primary', showSolved);
        });
    });
</script>

@functions {
    public string GetStatusBadgeClass(ReportStatus status)
    {
        switch (status)
        {
            case ReportStatus.REPORTED:
                return "bg-warning text-dark";
            case ReportStatus.IN_REVIEW:
                return "bg-info text-dark";
            case ReportStatus.ESCALATED:
                return "bg-danger";
            case ReportStatus.RESOLVED:
                return "bg-success";
            case ReportStatus.REJECTED:
                return "bg-secondary";
            default:
                return "bg-light text-dark";
        }
    }
}