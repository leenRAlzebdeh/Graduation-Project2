@model IEnumerable<JUSTLockers.Classes.Supervisor>

@{
    ViewData["Title"] = "Supervisors List";
    var currentFilter = ViewData["Filter"]?.ToString() ?? "All";

}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container mt-4">
        <h1 class="text-center mb-4">Supervisors List</h1>

        <!-- Filtering Buttons -->
        <div class="d-flex justify-content-center mb-3">
            <a href="@Url.Action("ViewSupervisorInfo", "Admin",new { filter = "All" })" class="btn btn-primary mx-2">All</a>
            <a href="@Url.Action("ViewSupervisorInfo","Admin", new { filter = "Engineering" })" class="btn btn-secondary mx-2">Engineering</a>
            <a href="@Url.Action("ViewSupervisorInfo","Admin", new { filter = "Medicine" })" class="btn btn-secondary mx-2">Medicine</a>
        </div>

        <table class="table table-striped table-bordered table-hover">
            <thead class="thead-dark">
                <tr>
                    <th>ID</th>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Supervised Department</th>
                    <th>Location</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var supervisor in Model)
                {
                    @if (ViewData["Filter"] == null || ViewData["Filter"].ToString() == "All" || supervisor.Location == ViewData["Filter"].ToString())
                    {
                        <tr>
                            <td>@supervisor.Id</td>
                            <td>@supervisor.Name</td>
                            <td>@supervisor.Email</td>
                            <td>@supervisor.SupervisedDepartment?.Name</td>
                            <td>@supervisor.Location</td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
