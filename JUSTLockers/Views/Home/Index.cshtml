<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="~/css/StyleSheet.css" rel="stylesheet" />
    <title>Add New Cabinet</title>
</head>

<body>

    <div class="container">
        <h2>Add New Cabinet</h2>
        <form asp-controller="Cabinet" asp-action="Add" method="post">
            <label>Cabinet Number</label>
            <input type="text" id="cabinetNumber" name="CabinetNumber" placeholder="Enter Cabinet No" required>

            <label>Location</label>
            <select id="location" name="Location">
                <option value="Engineering">Engineering</option>
                <option value="Medicine">Medicine</option>
            </select>

            <label>Department</label>
            <select id="department" name="Department">
                <!-- Departments will be dynamically populated -->
            </select>

            <label>Wing</label>
            <select id="wing" name="Wing">
                <!-- Wings will be dynamically populated -->
            </select>

            <label>Level</label>
            <select id="level" name="Level">
                <option>1</option>
                <option>2</option>
                <option>3</option>
            </select>

            <label>Assigned Employee</label>
            <input type="text" id="employeeId" name="EmployeeId" placeholder="Enter Assigned Employee ID" required>

            <label>Capacity</label>
            <input type="number" id="capacity" name="Capacity" placeholder="Enter Cabinet Capacity" required>

            <button type="submit">Add Cabinet</button>
        </form>
    </div>

    <script>
        const locationDepartments = {
            "Engineering": ["A", "C", "M", "N", "E"],
            "Medicine": ["Ph", "D", "N", "M"]
        };

        const departmentWings = {
            "A": ["A1", "A2", "A3"],
            "C": ["C1", "C2", "C3"],
            "M": ["M1", "M2", "M3"],
            "N": ["N1", "N2", "N3"],
            "E": ["E1", "E2", "E3"],
            "Ph": ["Ph1", "Ph2", "Ph3"],
            "D": ["D1", "D2", "D3"]
        };

        // Populate departments based on selected location
        document.getElementById("location").addEventListener("change", function () {
            const selectedLocation = this.value;
            const departmentSelect = document.getElementById("department");
            const wingSelect = document.getElementById("wing");

            // Clear previous options
            departmentSelect.innerHTML = "";
            wingSelect.innerHTML = "";

            locationDepartments[selectedLocation].forEach(department => {
                const option = document.createElement("option");
                option.text = department;
                option.value = department;
                departmentSelect.appendChild(option);
            });

            // Trigger department change to load wings automatically
            departmentSelect.dispatchEvent(new Event("change"));
        });

        // Populate wings based on selected department
        document.getElementById("department").addEventListener("change", function () {
            const selectedDepartment = this.value;
            const wingSelect = document.getElementById("wing");

            // Clear previous options
            wingSelect.innerHTML = "";

            departmentWings[selectedDepartment].forEach(wing => {
                const option = document.createElement("option");
                option.text = wing;
                option.value = wing;
                wingSelect.appendChild(option);
            });
        });

        // Show default options when the page loads
        document.getElementById("location").dispatchEvent(new Event("change"));
    </script>


</body>
</html>
