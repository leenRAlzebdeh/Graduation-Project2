<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Dashboard - JUSTLockers</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
</head>
<body>
    <div class="container mt-5">
        <h1 class="text-center mb-4">Admin Dashboard</h1>

        <!-- Display success or error messages -->
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success">
                @TempData["SuccessMessage"]
            </div>
        }

        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger">
                @TempData["ErrorMessage"]
            </div>
        }

        <div class="row g-4">
            <!-- Assign Cabinet -->
            <div class="col-md-4">
                <div class="card shadow-sm">
                    <div class="card-body text-center">
                        <i class="fas fa-briefcase fa-3x mb-3 text-primary"></i>
                        <h5>Add Cabinet</h5>
                        <a href="@Url.Action("AddCabinet", "Admin")" class="btn btn-primary w-100">Add</a>
                    </div>
                </div>
            </div>
            <!-- Sign Covenant -->
            <div class="col-md-4">
                <div class="card shadow-sm">
                    <div class="card-body text-center">
                        <i class="fas fa-signature fa-3x mb-3 text-success"></i>
                        <h5>Sign Covenant</h5>
                        <a href="@Url.Action("SignCovenant", "Admin")" class="btn btn-success w-100">Sign</a>
                    </div>
                </div>
            </div>

            <!-- Delete Covenant -->
            <div class="col-md-4">
                <div class="card shadow-sm">
                    <div class="card-body text-center">
                        <i class="fas fa-signature fa-3x mb-3 text-success"></i>
                        <h5>Delete Covenant</h5>
                        <a href="@Url.Action("DeleteCovenant", "Admin")" class="btn btn-success w-100">Delete</a>
                    </div>
                </div>
            </div>

            <!-- Notify Students -->
            <div class="col-md-4">
                <div class="card shadow-sm">
                    <div class="card-body text-center">
                        <i class="fas fa-bell fa-3x mb-3 text-warning"></i>
                        <h5>Notify Students</h5>
                        <a href="@Url.Action("NotifyStudents", "Admin")" class="btn btn-warning w-100">Notify</a>
                    </div>
                </div>
            </div>

            <!-- View Supervisor Info -->
            <div class="col-md-4">
                <div class="card shadow-sm">
                    <div class="card-body text-center">
                        <i class="fas fa-user-tie fa-3x mb-3 text-info"></i>
                        <h5>Supervisor Info</h5>
                        <a href="@Url.Action("ViewSupervisorInfo", "Admin")" class="btn btn-info w-100">View</a>
                    </div>
                </div>
            </div>

            <!-- View Forwarded Reports -->
            <div class="col-md-4">
                <div class="card shadow-sm">
                    <div class="card-body text-center">
                        <i class="fas fa-file-alt fa-3x mb-3 text-danger"></i>
                        <h5>Forwarded Reports</h5>
                        <a href="@Url.Action("LockerIssues", "Admin")" class="btn btn-danger w-100">View Reports</a>
                    </div>
                </div>
            </div>

            <!-- Respond to Forwarded Report -->
            <div class="col-md-4">
                <div class="card shadow-sm">
                    <div class="card-body text-center">
                        <i class="fas fa-reply fa-3x mb-3 text-secondary"></i>
                        <h5>Respond Report</h5>
                        <a href="@Url.Action("RespondForwardedReport", "Admin")" class="btn btn-secondary w-100">Respond</a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>